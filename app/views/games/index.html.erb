<div class="container-fluid">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2">
      <h1 class="text-center">Results</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
      <div class="row">
        <div class="col-xs-3">Date</div>
        <div class="col-xs-3">Level</div>
        <div class="col-xs-3">Time</div>
        <div class="col-xs-3 text-right">Score</div>
      </div>
      <% @games.each do |game| %>
        <div class="row">
          <div class="col-xs-3"><%= l game.created_at, format: :short %></div>
          <div class="col-xs-3"><%= game.difficulty %></div>
          <div class="col-xs-3">available soon</div>
          <div class="col-xs-3 text-right"><%= game.score %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>
